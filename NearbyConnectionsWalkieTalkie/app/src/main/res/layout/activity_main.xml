<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:keepScreenOn="true">

    <Button
        android:id="@+id/sendPictureButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:text="SEND"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/test01Button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="60dp"
        android:text="Open Pic"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/test02Button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="225dp"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="60dp"
        android:text="Permissio"
        android:textAllCaps="false" />

    <Spinner
        android:id="@+id/spinner01"
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="118dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/spinner02"
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="118dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/spinner03"
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:layout_marginStart="255dp"
        android:layout_marginLeft="255dp"
        android:layout_marginTop="118dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/name"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:gravity="top|end"
        android:padding="10dp"
        android:textColor="@color/textColor"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/current_state"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="173dp"
        android:background="@color/state_unknown"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/status_unknown"
        android:textColor="@color/textColor"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/previous_state"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/textColor"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/debug_log"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="3dp"
        android:gravity="bottom"
        android:maxLines="99"
        android:scrollbars="vertical"
        android:textColor="@color/textColor"
        android:textSize="20sp" />

</RelativeLayout>
