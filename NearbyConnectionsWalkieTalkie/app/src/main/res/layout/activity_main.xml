<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:keepScreenOn="true">

    <Button
        android:id="@+id/sendPictureButton"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:textAllCaps="false"
        android:text="SendPic" />

    <Button
        android:id="@+id/permissionButton"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="60dp"
        android:textAllCaps="false"
        android:text="Perm" />

    <!--Button
        android:id="@+id/openPictureButton"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="60dp"
        android:textAllCaps="false"
        android:text="OpenPic" /-->

    <Spinner
        android:id="@+id/openPictureSpinner"
        android:layout_width="130dp"
        android:layout_height="47dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="64dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/name"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:gravity="top|end"
        android:padding="10dp"
        android:textColor="@color/textColor"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/current_state"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="113dp"
        android:background="@color/state_unknown"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/status_unknown"
        android:textColor="@color/textColor"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/previous_state"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/textColor"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/debug_log"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="3dp"
        android:gravity="bottom"
        android:maxLines="99"
        android:scrollbars="vertical"
        android:textColor="@color/textColor"
        android:textSize="20sp" />

</RelativeLayout>
